<!-- How It Works Section -->
<section class="how-it-works-section py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold text-dark">How It Works</h2>
            <p class="lead text-muted">Simple steps to get fresh products or sell your harvest</p>
        </div>
        <div class="row">
            <div class="col-lg-6 mb-5">
                <h3 class="text-success mb-4"><i class="fas fa-shopping-cart me-2"></i>For Buyers</h3>
                <div class="steps">
                    <div class="step-item d-flex mb-4">
                        <div class="step-number">1</div>
                        <div class="step-content">
                            <h5>Browse Products</h5>
                            <p class="text-muted">Explore a wide variety of fresh agricultural products from verified farmers in your area.</p>
                        </div>
                    </div>
                    <div class="step-item d-flex mb-4">
                        <div class="step-number">2</div>
                        <div class="step-content">
                            <h5>Place Your Order</h5>
                            <p class="text-muted">Add items to cart, choose delivery options, and place your order securely.</p>
                        </div>
                    </div>
                    <div class="step-item d-flex">
                        <div class="step-number">3</div>
                        <div class="step-content">
                            <h5>Enjoy Fresh Products</h5>
                            <p class="text-muted">Receive your fresh products directly from the farm to your doorstep.</p>
                        </div>
                    </div>
