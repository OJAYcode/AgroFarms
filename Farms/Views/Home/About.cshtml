@{
    ViewData["Title"] = "About AgroFarms";
}

<div class="row mb-5">
    <div class="col-12 text-center">
        <h1 class="display-4"><i class="fas fa-seedling me-3 text-success"></i>About AgroFarms</h1>
        <p class="lead text-muted">Connecting farmers directly with consumers for fresh, quality agricultural products</p>
    </div>
</div>

<div class="row mb-5">
    <div class="col-lg-6 mb-4">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-body p-4">
                <h3 class="text-success mb-3"><i class="fas fa-bullseye me-2"></i>Our Mission</h3>
                <p class="mb-0">
                    AgroFarms is dedicated to revolutionizing the agricultural marketplace by creating a direct connection between farmers and consumers. 
                    We believe in supporting local agriculture, promoting sustainable farming practices, and ensuring that everyone has access to 
                    fresh, high-quality agricultural products at fair prices.
                </p>
            </div>
        </div>
    </div>
    <div class="col-lg-6 mb-4">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-body p-4">
                <h3 class="text-success mb-3"><i class="fas fa-eye me-2"></i>Our Vision</h3>
                <p class="mb-0">
                    To become the leading platform for sustainable agriculture commerce, where farmers thrive, consumers enjoy fresh produce, 
                    and communities benefit from stronger local food systems. We envision a world where technology brings people closer to 
                    their food sources and supports agricultural communities.
                </p>
            </div>
        </div>
    </div>
</div>

<div class="row mb-5">
    <div class="col-12">
        <h2 class="text-center mb-4">Why Choose AgroFarms?</h2>
    </div>
</div>

<div class="row mb-5">
    <div class="col-md-4 mb-4">
        <div class="text-center">
            <div class="bg-success rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                <i class="fas fa-tractor fa-2x text-white"></i>
            </div>
            <h4>Direct from Farmers</h4>
            <p class="text-muted">
                Skip the middleman and buy directly from local farmers. This ensures better prices for consumers and fair compensation for farmers.
            </p>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="text-center">
            <div class="bg-success rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                <i class="fas fa-leaf fa-2x text-white"></i>
            </div>
            <h4>Fresh & Organic</h4>
            <p class="text-muted">
                Get the freshest produce delivered straight from the farm. We support organic farming practices and clearly label organic products.
            </p>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="text-center">
            <div class="bg-success rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                <i class="fas fa-handshake fa-2x text-white"></i>
            </div>
            <h4>Community Support</h4>
            <p class="text-muted">
                Support your local farming community and contribute to sustainable agriculture while enjoying the best quality products.
            </p>
        </div>
    </div>
</div>

