@model Farms.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Sign In - AgroFarms";
    Layout = "_Layout";
}

<!-- Login Section -->
<section class="login-section min-vh-100 py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-11 col-lg-10 col-xl-9" style="max-width: 56rem;">
                <div class="login-card">
                    <div class="card border-0 shadow-lg">
                        <div class="card-body p-4 p-md-5">
                            <!-- Header -->
                            <div class="text-center mb-4">
                                <div class="login-icon mb-3">
                                    <div class="icon-circle bg-success bg-opacity-10 d-inline-flex align-items-center justify-content-center rounded-circle" style="width: 4rem; height: 4rem;">
                                        <i class="fas fa-seedling fa-2x text-success"></i>
                                    </div>
                                </div>
                                <h2 class="fw-bold text-dark mb-2">Welcome Back</h2>
                                <p class="text-muted mb-0">Sign in to your AgroFarms account</p>
                                <div class="hero-badge mt-3">
                                    <span class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill">
                                        ðŸŒ¾ Access Your Dashboard
                                    </span>
                                </div>
                            </div>                            <!-- Form -->
                            <form asp-action="Login" method="post" class="login-form">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>
                                
                                <!-- Email -->
                                <div class="form-floating mb-3">
                                    <input asp-for="Email" class="form-control rounded-3" placeholder="name@example.com" />
                                    <label asp-for="Email">
                                        <i class="fas fa-envelope me-2 text-muted"></i>Email Address
                                    </label>
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>

                                <!-- Password -->
                                <div class="form-floating mb-3">
                                    <input asp-for="Password" class="form-control rounded-3" placeholder="Password" />
                                    <label asp-for="Password">
                                        <i class="fas fa-lock me-2 text-muted"></i>Password
                                    </label>
                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                </div>

                                <!-- User Type -->
                                <div class="form-floating mb-3">
                                    <select asp-for="UserType" class="form-select rounded-3">
                                        <option value="">Select account type</option>
                                        <option value="Farmer">ðŸŒ± Farmer Account</option>
                                        <option value="Buyer">ðŸ›’ Buyer Account</option>
                                    </select>
                                    <label asp-for="UserType">
                                        <i class="fas fa-user-tag me-2 text-muted"></i>Account Type
                                    </label>
                                    <span asp-validation-for="UserType" class="text-danger small"></span>
                                </div>

                                <!-- Remember Me & Forgot Password -->
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <div class="form-check">
                                        <input asp-for="RememberMe" class="form-check-input" />
                                        <label asp-for="RememberMe" class="form-check-label text-muted">Remember me</label>
                                    </div>
                                    <a href="#" class="text-success text-decoration-none">Forgot Password?</a>
                                </div>                                <!-- Submit Button -->
                                <button type="submit" class="btn btn-success btn-lg w-100 mb-4 rounded-3">
                                    <i class="fas fa-sign-in-alt me-2"></i>Sign In to Dashboard
                                </button>
                            </form>

                            <!-- Registration Links -->
                            <div class="text-center">
                                <p class="text-muted mb-3">Don't have an account yet?</p>
                                <div class="row g-3">
                                    <div class="col-sm-6">
                                        <a asp-action="RegisterBuyer" class="btn btn-outline-success btn-lg w-100 rounded-3">
                                            <i class="fas fa-shopping-basket me-2"></i>Join as Buyer
                                        </a>
                                    </div>
                                    <div class="col-sm-6">
                                        <a asp-action="RegisterFarmer" class="btn btn-outline-success btn-lg w-100 rounded-3">
                                            <i class="fas fa-seedling me-2"></i>Join as Farmer
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
